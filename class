#! /bin/sh

for ARG in $@; do

	echo "#include \"$ARG.hpp\"" >$ARG.cpp
	echo "#include <iostream>" >>$ARG.cpp
	echo "#include \"colors.hpp\"" >>$ARG.cpp
	echo "" >>$ARG.cpp
	echo "// CONSTRUCTORS AND DESTRUCTORS-------------------------------------------------" >>$ARG.cpp
	echo "$ARG::$ARG(void) {" >>$ARG.cpp
	echo "    std::cout << GREEN \"$ARG default constructor called\" NC << std::endl;" >>$ARG.cpp
	echo "}" >>$ARG.cpp
	echo "" >>$ARG.cpp
	echo "$ARG::$ARG($ARG const &other) {" >>$ARG.cpp
	echo "    std::cout << GREEN \"$ARG copy constructor called\" NC << std::endl;" >>$ARG.cpp
	echo "    *this = other;" >>$ARG.cpp
	echo "}" >>$ARG.cpp
	echo "" >>$ARG.cpp
	echo "$ARG::~$ARG(void) {" >>$ARG.cpp
	echo "    std::cout << RED \"$ARG destructor called\" NC << std::endl;" >>$ARG.cpp
	echo "}" >>$ARG.cpp
	echo "" >>$ARG.cpp
	echo "// OPERATORS--------------------------------------------------------------------" >>$ARG.cpp
	echo "$ARG &$ARG::operator=($ARG const &other) {" >>$ARG.cpp
	echo "    if (this != &other){" >>$ARG.cpp
	echo "        // DO THINGS" >>$ARG.cpp
	echo "    }" >>$ARG.cpp
	echo "    return (*this);" >>$ARG.cpp
	echo "}" >>$ARG.cpp
	echo "" >>$ARG.cpp
	echo "// METHODS AND MEMBER FUNCTIONS-------------------------------------------------" >>$ARG.cpp

	UPPERCASE=$(echo $ARG | tr a-z A-Z)
	echo "#ifndef _${UPPERCASE}_HPP" >$ARG.hpp
	echo "#define _${UPPERCASE}_HPP" >>$ARG.hpp
	echo "" >>$ARG.hpp
	echo "class $ARG {" >>$ARG.hpp
	echo "  public:" >>$ARG.hpp
	echo "    $ARG(void);" >>$ARG.hpp
	echo "    $ARG($ARG const &other);" >>$ARG.hpp
	echo "    ~$ARG(void);" >>$ARG.hpp
	echo "" >>$ARG.hpp
	echo "    $ARG &operator=($ARG const &other);" >>$ARG.hpp
	echo "};" >>$ARG.hpp
	echo "" >>$ARG.hpp
	echo "#endif // !_${UPPERCASE}_HPP" >>$ARG.hpp

	echo "#ifndef _COLORS_HPP" > colors.hpp
	echo "#define _COLORS_HPP" >> colors.hpp
	echo "" >> colors.hpp
	echo "#define BLACK \"\033[1;30m\"" >> colors.hpp
	echo "#define RED \"\033[1;31m\"" >> colors.hpp
	echo "#define GREEN \"\033[1;32m\"" >> colors.hpp
	echo "#define YELLOW \"\033[1;33m\"" >> colors.hpp
	echo "#define BLUE \"\033[1;34m\"" >> colors.hpp
	echo "#define MAGENTA \"\033[1;35m\"" >> colors.hpp
	echo "#define CYAN \"\033[1;36m\"" >> colors.hpp
	echo "#define WHITE \"\033[1;37m\"" >> colors.hpp
	echo "#define NC \"\033[0m\"" >> colors.hpp
	echo "" >> colors.hpp
	echo "#endif // !_COLORS_HPP" >> colors.hpp

done
